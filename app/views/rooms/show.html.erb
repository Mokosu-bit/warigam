<%# ----------- 割振モード ----------- %>

<% if @event.mode == 'share' %>
  <h1>割振</h1>
  <p>金額:<%= @event.gamble.total_amount %>円</p>
  <% @joined_users.each do |joined_user| %>
    <div><%= image_tag joined_user.picture_url, class: 'rounded-circle', size: '50x50' %></div>
    <div><%= joined_user.name %></div>
  <% end %>
  <% if @event.created_by?(current_user) %>
    <div>
      <%= link_to 'スタート', mode_event_rooms_path(@event), {method: :post, class: "btn btn-primary #{ 'disabled' if @event.counts > 0 }", data: { confirm: '始めますか？' }} %>
    </div>
  <% end %>
  <% if @event.counts > 0 %>
    <% @joined_users.each do |joined_user| %>
      <div><%= image_tag joined_user.picture_url, class: 'rounded-circle', size: '50x50' %><%= @event.gamble.total_amount %></div>
    <% end %>
  <% end %>

<%# ----------- 平等モード ----------- %>

<% elsif @event.mode == 'equal' %>
  <div class="container justify-content-center text-center">
    <div class="row mt-5 mb-3 h2">
      <div class="col-6">
        金額
      </div>
      <div class="col-6">
        <%= @event.gamble.total_amount %>円
      </div>

      <div class="col-6 my-3">
        支払い人数
      </div>
      <div class="col-6 my-3" id="member">
        <%= @event.gamble.people_number %>人
      </div>
    </div>

    <div class="row justify-content-center mb-3">
      <div class="col-9">
        <div class="row justify-content-center">
          <% @joined_users.each do |joined_user| %>
            <div class="col-3 my-2">
              <% if joined_user.picture_url.present? %>
                <div><%= image_tag joined_user.picture_url, class: 'rounded-circle', size: '50x50' %></div>
              <% else %>
                <div><%= image_tag 'user-icon.png', class: 'rounded-circle', size: '50x50' %></div>
              <% end %>
              <div><%= joined_user.name.truncate(4, omission: '') %></div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <% if @event.created_by?(current_user) %>
      <div class="outline">
        <div class="roulette" id="roulette"><%= @event.user.name %></div>
      </div>
      <div class="my-3">
        <%= link_to 'スタート', equal_event_rooms_path(@event), {method: :post, class: "btn btn-primary #{ 'disabled' if @event.counts > 0 }", remote: true, id: "st"} %>
      </div>
    <% end %>
    <% if @event.counts > 0 %>
      <div class="row justify-content-center">
        <div class="h3">結果</div>
        <div class="col-10 border border-success">
      </div>
      <div class="row justify-content-center my-3">
        <div class="col-9">
          <div class="row justify-content-center">
            <% @event.results.each do |result_user| %>
              <div class="col-3 my-2">
                <% if result_user.picture_url.present? %>
                  <div><%= image_tag result_user.picture_url, class: 'rounded-circle', size: '50x50' %></div>
                <% else %>
                  <div><%= image_tag 'user-icon.png', class: 'rounded-circle', size: '50x50' %></div>
                <% end %>
                <div><%= result_user.name.truncate(4, omission: '') %></div>
              </div>
            <% end %>
          </div>
        </div>

        <div class="row justify-content-center h2 my-5">
          <div class="col-6">
            1人あたり
          </div>
          <div class="col-6">
            <%= @equal_amount %>円
          </div>
        </div>
      </div>

      <div class="mt-4">
        <div class="line-it-button" data-lang="ja" data-type="share-a" data-env="REAL" data-url="https://warigam.herokuapp.com/events/<%= @event.hashid %>/rooms" data-color="default" data-size="small" data-count="false" data-ver="3" style="display: none;"></div>
        <script src="https://www.line-website.com/social-plugins/js/thirdparty/loader.min.js" async="async" defer="defer"></script>
      </div>

      <div class="mt-4">
        <%= link_to '割り勘一覧', events_path %>
      </div>
    <% end %>
  </div>

<%# ----------- 単位モード ----------- %>


<% elsif @event.mode == 'unit' %>
  <div class="container justify-content-center text-center">
    <div class="row mt-5 mb-3 h2">
      <div class="col-6">
        金額
      </div>
      <div class="col-6">
        <%= @event.gamble.total_amount %>円
      </div>
    </div>
    <div class="row justify-content-center mb-3">
      <div class="col-9">
        <div class="row justify-content-center">
          <% @joined_users.each do |joined_user| %>
            <div class="col-3 my-2">
              <% if joined_user.picture_url.present? %>
                <div><%= image_tag joined_user.picture_url, class: 'rounded-circle', size: '50x50' %></div>
              <% else %>
                <div><%= image_tag 'user-icon.png', class: 'rounded-circle', size: '50x50' %></div>
              <% end %>
              <div><%= joined_user.name.truncate(4, omission: '') %></div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <% if @event.created_by?(current_user) %>
      <div class="mb-3">
        <%= link_to 'スタート', unit_event_rooms_path(@event), {method: :post, class: "btn btn-primary #{ 'disabled' if @event.counts > 0 }", data: { confirm: '始めますか？' }} %>
      </div>
    <% end %>
    <% if @event.counts > 0 %>
      <div class="row justify-content-center">
        <div class="h3">結果</div>
        <div class="col-10 border border-success">
      </div>
      <div class="row mt-4">
        <div class="col-6">
          <% @event.results.each do |result_user| %>
            <% if result_user.picture_url.present? %>
              <div><%= image_tag result_user.picture_url, class: 'rounded-circle', size: '50x50' %></div>
            <% else %>
              <div><%= image_tag 'user-icon.png', class: 'rounded-circle', size: '50x50' %></div>
            <% end %>
              <div class="mb-4"><%= result_user.name.truncate(4, omission: '') %></div>
          <% end %>
        </div>
        <div class="col-6 mt-2">
          <% @unit.each do |unit|%>
            <div class="mt-3 mb-5 pb-3 h2">
              <div><%= unit %>円</div>
            </div>
          <% end %>
        </div>

        <div class="mt-4">
          <div class="line-it-button" data-lang="ja" data-type="share-a" data-env="REAL" data-url="https://warigam.herokuapp.com/events/<%= @event.hashid %>/rooms" data-color="default" data-size="small" data-count="false" data-ver="3" style="display: none;"></div>
          <script src="https://www.line-website.com/social-plugins/js/thirdparty/loader.min.js" async="async" defer="defer"></script>
        </div>

        <div class="mt-4">
          <%= link_to '割り勘一覧', events_path %>
        </div>
      </div>
    <% end %>
  </div>

<%# ----------- モードなし ----------- %>

<% else %>
  <h1>モードなし</h1>
<% end %>
