<% if @event.counts.zero? %>
  <div class="container justify-content-center text-center">
    <div class="mt-5 mb-3">
      <div class="mb-3">
        <div class="h3"><%= @event.title %></div>
      </div>

      <div class="mb-3">
        <div class="h5"><%= @event.mode_i18n %></div>
      </div>

      <div class="mb-3">
        <div class="h5"><i class="fa-solid fa-coins"></i> <%= @event.gamble.total_amount %>円</div>
      </div>

      <div class="row justify-content-center mb-3">
        <div class="col-9">
          <div class="row justify-content-center">
            <% @joined_users.each do |joined_user| %>
              <div class="col-3 my-2">
                <%# <div><%= image_tag 'warigam_header.png', class: 'rounded-circle', size: '50x50' %1></div> %>
                <div><%= image_tag joined_user.picture_url, class: 'rounded-circle', size: '50x50' %></div>
                <div><%= joined_user.name.truncate(4, omission: '') %></div>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <div class="mb-3">
        <% if user_signed_in? && current_user.join?(@event) %>
          <%# <%= link_to event_join_path(@event), method: :delete, data: { confirm: '参加をキャンセルしてもよろしいですか？' } do %1> %>
          <%#   <div class="btn btn-danger">参加キャンセル</div> %>
          <%# <% end %1> %>
        <% else %>
          <%= link_to event_join_path(@event), method: :post, data: { confirm: "参加しますか？\n※一度参加すると逃げられません。" } do %>
            <div class="btn btn-primary">参加</div>
          <% end %>
        <% end %>
      </div>

      <div class="mb-3">
        <% if @event.created_by?(current_user) %>
          <div class="mb-3">
            <%= qrcode.html_safe %>
          </div>

          <div class="line-it-button" data-lang="ja" data-type="share-a" data-env="REAL" data-url="https://warigam.herokuapp.com/events/<%= @event.hashid %>" data-color="default" data-size="small" data-count="false" data-ver="3" style="display: none;"></div>
          <script src="https://www.line-website.com/social-plugins/js/thirdparty/loader.min.js" async="async" defer="defer"></script>
        <% end %>
      </div>

      <div class="mb-3">
        <%= link_to event_rooms_path(@event) do %>
          <div class="btn btn-primary">ルームに入室する</div>
        <% end %>
      </div>
      
      <div class="row justify-content-center my-4">
        <% if @event.created_by?(current_user) %>
          <div class="col-4">
            <%= link_to edit_event_path(@event), class: "h2 text-center" do %>
              <i class="fa-solid fa-pen-to-square"></i>
            <% end %>
          </div>
          <div class="col-4">
            <%= link_to event_path, method: :delete, data: { confirm: 'イベントを削除してよろしいですか？' }, class: 'col-auto h2 hover-target text-center simple-a-tag' do %>
              <i class="fa-solid fa-trash"></i>
            <% end %>
          </div>
        <% end %>
      </div>

      <div>
        <%= link_to 'Back', events_path %>
      </div>
    </div>
  </div>
<% elsif @event.counts > 0 %>
  <div class="container justify-content-center text-center">
    <div class="mt-5 pt-5">終了したイベントです</div>

    <div class="mt-5">
      <%= link_to event_rooms_path(@event) do %>
        <div class="btn btn-primary">結果を見る</div>
      <% end %>
    </div>
  </div>
<% else %>
  エラー
<% end %>
