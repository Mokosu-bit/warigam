<p id="notice"><%= notice %></p>

<div class="container justify-content-center text-center">
  <% if @events.empty? %>
    <div class="row">
      <div class="no-event">
        <%= link_to new_event_path do %>
          <div class="btn btn-primary">イベントを作成する</div>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="row">
      <div class="mb-3 mt-4">
        <%= link_to new_event_path do %>
          <div class="btn btn-primary">イベントを作成する</div>
        <% end %>
      </div>
    </div>
    <% @events.each do |event| %>
      <div class="card row mb-5 col-9 mx-auto">
        <%= link_to event_path(event), class: 'event-link' do %>
          <div class="card-body flex">
            <div class="col-12 mt-2">
              <div class="h4"><%= event.title %></div>
              <div class="mt-3"><%= event.mode_i18n %></div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
