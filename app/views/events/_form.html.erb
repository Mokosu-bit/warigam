<%= form_with model: @event, local: true do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :mode %>
    <%= form.select :mode, Event.modes.keys.map { |k| [I18n.t("enums.event.mode.#{k}"), k] } %>
  </div>

  <%= form.fields_for :gamble do |g| %>
    <div class="field">
      <%= g.label :total_amount %>
      <%= g.number_field :total_amount %>
    </div>

    <div class="field">
      <%= g.label :people_number %>
      <%= g.number_field :people_number %>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
